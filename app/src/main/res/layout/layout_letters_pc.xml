<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvLetterPCA"
        android:text="@string/letter_a"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@id/viewComputer"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCB"
        style="@style/SingleDigitStyle" />


    <TextView
        android:id="@+id/tvLetterPCB"
        android:text="@string/letter_b"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCA"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCC"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCC"
        android:text="@string/letter_c"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCB"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCD"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCD"
        android:text="@string/letter_d"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCC"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCE"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCE"
        android:text="@string/letter_e"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCD"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCF"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCF"
        android:text="@string/letter_f"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCE"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCG"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCG"
        android:text="@string/letter_g"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCF"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCH"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCH"
        android:text="@string/letter_h"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCG"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCI"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCI"
        android:text="@string/letter_i"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCH"
        app:layout_constraintRight_toLeftOf="@+id/tvLetterPCJ"
        style="@style/SingleDigitStyle" />

    <TextView
        android:id="@+id/tvLetterPCJ"
        android:text="@string/letter_j"
        app:layout_constraintBottom_toTopOf="@+id/viewComputer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/tvLetterPCI"
        app:layout_constraintRight_toRightOf="@id/viewComputer"
        style="@style/SingleDigitStyle" />
</merge>